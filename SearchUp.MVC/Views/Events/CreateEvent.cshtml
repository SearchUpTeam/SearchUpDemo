@model Application.ViewModels.CreateEventViewModel

@{
    ViewBag.Title = "Create Event";
}


<link rel="stylesheet" href="/css/stylesForComponents/dynamic-search.css">
<link rel="stylesheet" href="/css/stylesForComponents/tag-input.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="module" src="/js/scripts-for-pages/createEvent.js"></script>

<div class="container-sm col-sm-8 border border-dark mt-5 p-3">
    <h1>Create Event</h1>
    <form method="post" asp-controller="Events" asp-action="CreateEvent" id="create-event-form"  enctype="multipart/form-data">
        <div class="mb-3">
            <label for="input-event-title" class="form-label fw-bold">Event Title</label>
            <input asp-for="Title" type="text" class="form-control" id="input-event-title">
        </div>
        <div class="mb-3">
            <label for="event-description-input" class="form-label fw-bold">Event Description</label>
            <textarea asp-for="Description" class="form-control" id="event-description-input" rows="3" placeholder="enter here additional info about event(location, items to grab)"></textarea>
        </div>
        <div class="mb-3">
            <p class="fw-bold">Topics</p>
            <div id="select-interests"></div>
            <input asp-for="SelectedTopicsInput" type="text" class="d-none" id="added-interests">
        </div>
        <div class="mb-3">
           <p class="fw-bold">Time Interval</p>
           <div class="form-group row">
                <label for="start-time-input" class="col-sm-2 col-form-label">Start Time:</label>
                <div class="col-sm-3">
                    <input asp-for="StartTime" type="datetime-local" class="form-control" id="start-time-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="start-time-input" class="col-sm-2 col-form-label">End Time:</label>
                <div class="col-sm-3">
                    <input asp-for="EndTime" type="datetime-local" class="form-control" id="start-time-input">
                </div>
            </div>
       </div>
       <div class="mb-3">
            <label for="formFileMultiple" class="form-label fw-bold">Additional files(images, videos, gifs etc.)</label>
            <input asp-for="Files" class="form-control" id="formFileMultiple">
        </div>
      <button type="submit" class="btn btn-success">Create Event</button>
    </form>
</div>
